{
  "name": "night-patrol",
  "version": "1.0.0",
  "description": "Interactive CLI for Nightwatch Test Runner",
  "bin": {
    "night-patrol": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepush": "yarn test",
    "start": "babel-node ./source/cli.js",
    "test:lint": "eslint ./source/",
    "test:unit": "ava --verbose ./source/**/*.test.js",
    "test": "yarn test:lint && yarn test:unit",
    "prebuild": "rimraf dist && mkdir dist",
    "build": "BABEL_ENV=build babel --out-dir dist source",
    "watch": "yarn build -- --watch",
    "prerelease": "yarn test && yarn build",
    "release": "semantic-release",
    "postrelease": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jahed/night-patrol.git"
  },
  "keywords": [
    "nightwatch",
    "test"
  ],
  "author": "Jahed Ahmed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jahed/night-patrol/issues"
  },
  "homepage": "https://github.com/jahed/night-patrol",
  "dependencies": {
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "require-dir": "^0.3.1",
    "shelljs": "^0.7.7",
    "stripcolorcodes": "^0.1.0",
    "vorpal": "^1.11.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^1.1.3",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.10.8"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}

{
  "name": "night-patrol",
  "version": "2.0.1",
  "description": "An Interactive Test Runner for Nightwatch",
  "author": "Jahed Ahmed",
  "license": "MIT",
  "homepage": "https://github.com/jahed/night-patrol",
  "repository": "https://github.com/jahed/night-patrol",
  "keywords": [
    "nightwatch",
    "test",
    "cli",
    "interactive"
  ],
  "files": [
    "lib",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "night-patrol": "bin/cli.js"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "build": "rimraf lib && tsc",
    "watch": "yarn build --watch",
    "ready": "yarn lint && yarn test && yarn build",
    "push": "git push --follow-tags",
    "deploy": "yarn ready && standard-version && yarn publish && yarn push",
    "deps": "yarn upgrade-interactive --latest && yarn upgrade && git add yarn.lock '*package.json' && git commit -m 'build(deps): upgrade dependencies'"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "peerDependencies": {
    "nightwatch": "^1.0.0"
  },
  "dependencies": {
    "@types/chokidar": "1.7.5",
    "chalk": "2.4.2",
    "chokidar": "2.1.1",
    "lodash": "4.17.11",
    "minimist": "1.2.0",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "require-dir": "1.2.0",
    "reselect": "4.0.0",
    "stripcolorcodes": "0.1.0",
    "vorpal": "1.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@types/chalk": "2.2.0",
    "@types/inquirer": "0.0.43",
    "@types/jest": "24.0.3",
    "@types/jest-diff": "20.0.0",
    "@types/lodash": "4.14.120",
    "@types/minimist": "1.2.0",
    "@types/nightwatch": "0.9.11",
    "@types/node": "10.12.26",
    "@types/shelljs": "0.8.2",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "nightwatch": "1.0.19",
    "rimraf": "2.6.3",
    "standard-version": "4.4.0",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.3.3"
  }
}
